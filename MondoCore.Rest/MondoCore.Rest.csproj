<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
    <Title>MondoCore.Rest</Title>
    <Authors>Jim Lightfoot</Authors>
    <Version>1.2.0</Version>
    <Copyright>© Jim Lightfoot, All Rights Reserved</Copyright>
    <RepositoryUrl>https://github.com/jim-lightfoot/MondoCore.Rest</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <Description>Class/interface for calling REST apis</Description>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Http" Version="8.0.0" />
    <PackageReference Include="MondoCore.Common" Version="1.5.2" />
    <PackageReference Include="System.Net.Http.Json" Version="8.0.0" />
  </ItemGroup>

</Project>
